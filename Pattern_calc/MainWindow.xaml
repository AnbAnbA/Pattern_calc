<Window x:Class="Pattern_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattern_calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Выберите арифметическую операцию"></TextBlock>
            <ComboBox Name="CBAr" SelectionChanged="CBAr_SelectionChanged"></ComboBox>
            <TextBox Name="TBOne"></TextBox>
            <TextBlock x:Name="TBsim" Text=" "></TextBlock>
            <TextBox Name="TBTwo"></TextBox>
            <Button Name="BTRes" Content="Вычислить" Click="BTRes_Click"></Button>
            <TextBlock Text="Результат:"></TextBlock>
            <TextBlock Name="TBRes"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
