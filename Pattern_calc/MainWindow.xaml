<Window x:Class="Pattern_calc.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Pattern_calc"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="Выберите арифметическую операцию"></TextBlock>
            <ComboBox Name="CBAr" SelectionChanged="CBAr_SelectionChanged"></ComboBox>
            <TextBox x:Name="TBOne" Width="50" Height="50" Margin="0,10,180,0"/>
            <TextBlock x:Name="TBsim" Width="50" Height="50" Margin="180,-48,10,0" Text=""></TextBlock>
            <TextBox Name="TBTwo" Width="50" Height="50" Margin="0,0,0,0"></TextBox>
            <Button Name="BTRes" Content="Вычислить" Click="BTRes_Click"></Button>
            <TextBlock Text="Результат:"></TextBlock>
            <TextBlock Name="TBRes"></TextBlock>
        </StackPanel>
    </Grid>
</Window>
